<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content" android:layout_marginTop="16dp">

    <ImageView android:id="@+id/image"
        android:layout_width="120dp" android:layout_height="120dp"
        android:scaleType="fitCenter"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" android:layout_alignParentLeft="true"/>

    <TextView android:id="@+id/id_title" android:layout_width="match_parent" android:layout_height="wrap_content"
        android:textAppearance="?attr/textAppearanceSearchResultTitle"
        android:layout_alignParentTop="true" android:layout_toRightOf="@+id/image"/>

    <TextView android:id="@+id/content" android:layout_width="match_parent" android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/text_margin" android:textAppearance="?attr/textAppearanceListItem"
        android:layout_toRightOf="@+id/image" android:layout_below="@+id/id_title" />
</RelativeLayout>